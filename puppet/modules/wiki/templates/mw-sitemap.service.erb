# This file is managed by puppet
[Unit]
Description=Generate sitemap for MediaWiki
Requisite=mysql.service
After=mysql.service

[Service]
User=<%= @maintenance_user %>
ExecStart=/usr/bin/php <%= @production_dir %>/maintenance/run.php generateSitemap --fspath /www/<%= @domain %>/docroot/sitemap/ --skip-redirects --urlpath sitemap/
ProtectHome=read-only
ProtectSystem=full
Nice=10
