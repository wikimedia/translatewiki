# Siebrand / 2008-07-13
# should be run as user 'siebrand' because pywikipediabot checks ownership of user-config.py

STATSFILE="$HOME/temp/stats-mantis.txt"

# create basic stats file for group 'out-mantis'
cd /www/w/extensions/Translate/scripts
/usr/bin/php groupStatistics.php --skipzero --groups=out-mantis-core,out-mantis-plugin-mantiscoreformatting,out-mantis-plugin-mantisgraph,out-mantis-plugin-xmlimportexport --skiplanguages=test,qqq > $STATSFILE

STATSPAGE="$HOME/temp/stats-mantis_page"

# compile Wiki statistics page for pywikipedia bot
/bin/echo "Start" > $STATSPAGE
/bin/echo "StartTitleTranslating:MantisBT/stats/trunkStopTitle" >> $STATSPAGE
/bin/date >> $STATSPAGE
/bin/cat $STATSFILE >> $STATSPAGE
/bin/echo "End" >> $STATSPAGE

# upload stats page to Betawiki
/usr/bin/python /home/betawiki/software/pywikipedia/pagefromfile.py -force -summary:"Updating statistics" -notitle -titlestart:StartTitle -titleend:StopTitle -file:$STATSPAGE -start:Start -end:End

# house keeping
/bin/rm $STATSFILE
/bin/rm $STATSPAGE
