#!/bin/bash
set -o nounset -o pipefail -o errexit

U="l10n-bot"
GERRIT=("$U@gerrit.wikimedia.org" -p 29418)

ssh "${GERRIT[@]}" gerrit query --format=TEXT "owner:$U" "project:$1" status:open |
grep '  url:'  |
cut -d/ -f5 |
sort |
xargs -I ____ ssh "${GERRIT[@]}" gerrit review ____,1 --code-review 2