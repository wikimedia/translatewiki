# Siebrand / 2008-07-13

STATSFILE="$HOME/temp/stats-wikia.txt"

# create basic stats file for group 'wikia-0-all'
cd /www/w/extensions/Translate/scripts
/usr/bin/php groupStatistics.php --fuzzy --skipzero --groups=wikia-0-all --skiplanguages=test,qqq > $STATSFILE

STATSPAGE="$HOME/temp/stats-wikia_page"

# compile Wiki statistics page
/bin/echo "Start" > $STATSPAGE
/bin/echo "StartTitleTranslating:Wikia/statsStopTitle" >> $STATSPAGE
/bin/date >> $STATSPAGE
/bin/cat $STATSFILE >> $STATSPAGE
/bin/echo "End" >> $STATSPAGE

# upload stats page to Betawiki
/usr/bin/python /home/betawiki/software/pywikibot/pagefromfile.py -force -summary:"Updating statistics" -notitle -titlestart:StartTitle -titleend:StopTitle -file:$STATSPAGE -start:Start -end:End

# house keeping
/bin/rm $STATSFILE
/bin/rm $STATSPAGE
