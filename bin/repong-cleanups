#!/bin/bash
set -o nounset -o pipefail -o errexit

. /etc/wikisettings
DIRSCRIPT=$(dirname "$(readlink -f "$0")")

# shellcheck source=bin/synclock
. "$DIRSCRIPT/synclock"

find /resources/caches/$WIKINAME/ -maxdepth 1 -ctime +365 -delete

cd "$AUTOIMPORT_DIR"
php "$DIRSCRIPT/../repong/repong.php" purge --really

cd "$AUTOEXPORT_DIR"
php "$DIRSCRIPT/../repong/repong.php" purge --really
